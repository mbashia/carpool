<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="trip-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save"
  >
    <%= label(f, :from) %>
    <%= text_input(f, :from) %>
    <%= error_tag(f, :from) %>

    <%= label(f, :to) %>
    <%= text_input(f, :to) %>
    <%= error_tag(f, :to) %>

    <%= label(f, :capacity) %>
    <%= text_input(f, :capacity) %>
    <%= error_tag(f, :capacity) %>

    <%= label(f, :notes) %>
    <%= text_input(f, :notes) %>
    <%= error_tag(f, :notes) %>

    <%= label(f, :price) %>
    <%= text_input(f, :price) %>
    <%= error_tag(f, :price) %>

    <div>
      <%= submit("Save", phx_disable_with: "Saving...") %>
    </div>
  </.form>
</div>
